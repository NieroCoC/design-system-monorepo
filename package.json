{
  "name": "design-system-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "src/packages/*"
  ],
  "dependencies": {
    "@craco/craco": "^6.0.0",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-knobs": "^6.1.14",
    "@storybook/addon-notes": "^5.3.21",
    "@storybook/addons": "^6.1.14",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "enzyme": "^3.11.0",
    "lerna": "^3.22.1",
    "lerna-changelog": "^1.0.1",
    "postcss-cli": "7.1.2",
    "react": "^17.0.1",
    "react-docgen-typescript-loader": "^3.7.2",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.1",
    "typescript": "^4.1.3",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "start": "craco start",
    "build": "craco build",
    "test": "craco test",
    "build:prod": "lerna run build && yarn run build:prod:css",
    "build:css": "postcss ./src/assets/css/styles.css -o ./src/assets/css/compiled.css",
    "copy:recursive:assets": "cp -r ./src/assets/css/ src/packages/atoms/lib/css",
    "build:prod:css": "yarn copy:recursive:assets && NODE_ENV=production postcss ./src/assets/css/styles.css -o ./src/packages/atoms/lib/css/main.css && rm ./src/packages/atoms/lib/css/compiled.css",
    "prestorybook": "yarn build:css",
    "storybook": "start-storybook -p 6006 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.1.14",
    "@storybook/addon-essentials": "^6.1.14",
    "@storybook/addon-links": "^6.1.14",
    "@storybook/node-logger": "^6.1.14",
    "@storybook/preset-create-react-app": "^3.1.5",
    "@storybook/react": "^6.1.14",
    "@storybook/theming": "^6.1.14",
    "@tailwindcss/postcss7-compat": "^2.0.2",
    "@types/enzyme": "^3.10.8",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.21",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.4.1",
    "autoprefixer": "^9",
    "file-loader": "^6.2.0",
    "postcss": "^7",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat"
  }
}
